(defpoll calendar_day :interval "20h" "date '+%d'")
(defpoll calendar_year :interval "20h" "date '+%Y'")

(defwidget cal []
	(box :class "cal" :orientation "v"
	(box :class "cal-in"
	(calendar :class "cal" 
			  :day calendar_day 
			  :year calendar_year))))



(defwindow calendar
    :stacking "fg" 
    :monitor 0
	:geometry (geometry    
                        :anchor "top left"
						:width "270px" 
						:height "60px"
                        :anchor "top left"
    )
(cal))
